// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  createdAt     DateTime  @default(now())
  materiasAprobadas MateriaProgreso[]
}

model MateriaProgreso {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  materiaId Int      
  
  estado    String   @default("APROBADA")
  nota      Float?   
  
  // CAMBIO AQU√ç: Detalle de aplazos
  aplazos   Int      @default(0) // Mantenemos el contador total
  notaAplazo1 Float? // Nota del 1er aplazo
  notaAplazo2 Float? // Nota del 2do aplazo
  notaAplazo3 Float? // Nota del 3er aplazo

  updatedAt DateTime @updatedAt

  @@unique([userId, materiaId])
}